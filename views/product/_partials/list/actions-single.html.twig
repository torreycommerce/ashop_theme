
{# Begin registry button #}
{% if items_in_registry is empty %}
{% set added = false %}
{% else %}
{% set added = true %}
{% endif %}
{% if registries is empty %}
<div class="col-md-3 col-xs-6 no-padding">
    <button type="submit" name="action" value="registry" class="btn btn-block btn-registry wishlist">
        {% if added %}
        <i class="fa fa-check"></i>
        {% else %}
        <i class="fa fa-gift"></i>
        {% endif %}
        <span>Add to Registry</span>
    </button>
</div>
{% else %}
<div class="col-md-3 col-xs-6 no-padding">
    <button type="submit" name="action" value="registry" class="btn btn-block btn-registry wishlist dropdown-toggle" data-toggle="dropdown">
        {% if added %}
        <i class="fa fa-check"></i>
        {% else %}
        <i class="fa fa-gift"></i>
        {% endif %}
        <span>Add to Registry</span>
    </button>
    <ul class="dropdown-menu" role="menu">
        {% for registry in registries %}
        <li><button type="submit" class="btn btn-link" name="action" value="registry/{{registry.id}}">Add to '{{registry.name}}'</button></li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{# End registry button #}
{# Begin wishlist button #}
{% if items_in_wishlist is empty %}
{% set added = false %}
{% else %}
{% set added = true %}
{% endif %}
{% if wishlists is empty %}
<div class="col-md-3 col-xs-6 no-padding-right">
    <button type="submit" name="action" value="wishlist" class="btn btn-block btn-wishlist wishlist">
        {% if added %}
        <i class="fa fa-check"></i>
        {% else %}
        <i class="fa fa-star"></i>
        {% endif %}
        <span>Add to Wishlist</span>
    </button>
</div>
{% else %}
<div class="col-md-3 col-xs-6 no-padding-right ">
    <button type="submit" name="action" value="wishlist" class="btn btn-block btn-wishlist wishlist dropdown-toggle" data-toggle="dropdown">
        {% if added %}
        <i class="fa fa-check"></i>
        {% else %}
        <i class="fa fa-star"></i>
        {% endif %}
        <span>Add to Wishlist</span>
    </button>
    <ul class="dropdown-menu" role="menu">
        {% for wishlist in wishlists %}
        <li><button type="submit" class="btn btn-link" name="action" value="wishlist/{{wishlist.id}}">Add to '{{wishlist.name}}'</button></li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{# End wishlist button #}